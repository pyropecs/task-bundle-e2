<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

     
        <File name="MAIN" fileName="C:/e2/task-full-2/bookstore/src/logs/application.log" append="true">
            <JsonTemplateLayout/>
        </File>
        <File name="DEPLOY" fileName="C:/e2/task-full-2/bookstore/src/logs/deploy.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>

    <Loggers>
      
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="MAIN" />
            <AppenderRef ref="DEPLOY" />
        </Root>
    </Loggers>
</Configuration>
