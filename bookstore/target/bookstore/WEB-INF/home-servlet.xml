<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
                        ">
    <context:component-scan base-package="com.library">
    </context:component-scan>
     <mvc:annotation-driven/>
    <context:annotation-config> </context:annotation-config>
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/views/" />

        <property name="suffix" value=".jsp" />

    </bean>
<mvc:resources mapping="/styles/**" location="/styles/" />
<mvc:resources mapping="/js/**" location="/js/" />
   
    <bean name="dataSource" class="org.mariadb.jdbc.MariaDbDataSource">
        <property name="user" value="root">
        </property>
        <property name="password" value="praveen">
        </property>
        <property name="url" value="jdbc:mariadb://localhost:3306/bookstore">
        </property>
    </bean>
    <bean name="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource">
        </property>
        <property name="packagesToScan" value="com.library">
        </property>
        <property name="mappingResources">
            <list>
                <value> users.hbm.xml </value>
                <value>books.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.show_sql"> true </prop>
                <prop key="hibernate.hbm2ddl.auto"> update </prop>
                <prop key="hibernate.dialect"> org.hibernate.dialect.MariaDBDialect </prop>
                <prop key="hibernate.current_session_context_class"> thread </prop>
            </props>
        </property>
    </bean>
</beans>